

<h1>Add race</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/Race/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="Name">Name</label>
                <input class="form-control" type="text" id="Name" name="Name" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Country">Country</label>
                <input class="form-control" type="text" id="Country" name="Country" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="City">City</label>
                <input class="form-control" type="text" id="City" name="City" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Number">Number</label>
                <input class="form-control" type="text" id="Number" name="Number" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Place">Place</label>
                <input class="form-control" type="text" id="Place" name="Place" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Distance">Distance</label>
                <input class="form-control" type="text" id="Distance" name="Distance" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Result">Result</label>
                <input class="form-control" type="text" id="Result" name="Result" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="AveragePace">AveragePace</label>
                <input class="form-control" type="text" id="AveragePace" name="AveragePace" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Date">Date</label>
                <input class="form-control" type="date" id="Date" name="Date" />
            </div>
            <div class="form-group mb-3">
                <label class="control-label" for="Note">Note</label>
                <input class="form-control" type="text" id="Note" name="Note" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
